{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
			"plugin:@typescript-eslint/recommended",
			"prettier/@typescript-eslint",
			"plugin:prettier/recommended",
      "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
			"@typescript-eslint",
			"prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "import/extensions":[
        "error",
        "ignorePackages",
        {
          "ts":"never"
        }
      ],
      "arrow-parens":"off"


    },
    "settings": {
      "import/resolver":{
        "typescript": {}
      }
    }
}
